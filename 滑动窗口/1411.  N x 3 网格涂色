constexpr int mod = 1e9 + 7;
std::unordered_map<int , int> memo;
int dfs(int i, int j, int pre_row, int cur_row){
    if(i == 0){
        return 1;
    }
    if(j == 3){
        return dfs(i - 1, 0, cur_row, 0);
    }
    int key = (i << 14) | (j << 12) | (pre_row << 6) | cur_row;
    //一行(row)有三列,各用一个比特位表示，每列有三种颜色(0,1,2)需用两位表示(00,01,10) => 3*2 = 6
    //j 为列索引,三列需用2比特位进行表示 , i 为行索引且最大为5000 , log₂5000 = 14(上取整) => i为第27位~第14位
    if(memo.contains(key)){
        return memo[key];
    }
    int res = 0;
    for(int color = 0; color < 3; color++){
        if(pre_row > 0 && color == (pre_row >> (j*2) & 3) || j > 0 && color == (cur_row >> ((j - 1) * 2) & 3)){
            continue;//不合法
        }
        res = (res + dfs(i, j + 1, pre_row, cur_row | (color << (j*2)))) % mod;
    }
    memo[key] = res;
    return res;
}
class Solution {
public:
    int numOfWays(int n) {
        return dfs(n, 0, 0, 0);
    }
};
