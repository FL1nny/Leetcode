class Solution {
public:
    int longestEqualSubarray(vector<int>& nums, int k) {
        int n = nums.size();
        //将相同元素分组并以哈希表记录
        vector<vector<int>> pos_list(n + 1);
        for(int i = 0; i < n; i++){
            int x = nums[i];
            pos_list[x].push_back(i - pos_list[x].size());
        }

        int ans = 0;
        for(auto& pos : pos_list){
            int l = 0;
            for(int r = 0; r < pos.size(); r++){
                while(pos[r] - pos[l] > k)
                    l++;
                ans = max(ans , r - l + 1);
            }
        }
        return ans;
    }
};
