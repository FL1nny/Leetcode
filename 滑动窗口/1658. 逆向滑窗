class Solution {
public:
    int minOperations(vector<int>& nums, int x) {//左 + 右 = x => 中 = totalSum -x
        int l = 0;
        int r = 0;
        int n = nums.size();
        int totalSum = 0;
        int windowSum = 0;
        int maxLen = -1;
        for(int i =0; i < nums.size(); i++) totalSum += nums[i];
        int target = totalSum - x;
        if(target < 0) return -1;
        while(r < n){
            windowSum += nums[r++];
            while(l <=r && windowSum > target){
                windowSum -= nums[l++];
            }
            if(windowSum == target) {
                maxLen = max(maxLen , r - l);
            }
        }
        if(maxLen != -1){
            return n - maxLen;
        }
        return -1;
    }
};
